<div class="posts">
  <div class="post">
    <%= form_with model: post, local: true do |f| %>
    <div class="field">
      <%= f.label :title, 'タイトル',class: "label" %><br>
      <%= f.text_area :title,class: "form-title" %>
    </div>
    <div class="field">
      <%= f.label :place, '場所',class: "label" %><br>
      <%= f.text_area :place,class: "form-place" %>
    </div>
    <div class="field">
      <%= f.file_field :images, multiple: true %>
    </div>
    <div class="field">
      <%= f.label :content, '内容',class: "label" %><br>
      <%= f.text_area :content,class: "form-text",rows: 10 %>
    </div>
    <div class="action">
      <%= f.submit "Submit", class: "form-btn" %>
    </div>
    <% end %>
  </div>
</div>

<%= link_to  "投稿者", "#",class: "author" %>
<div class="title">
  <%= link_to post.title, "#" %>
</div>
<div class="place">
  <%= post.place %>
</div>
<div class="post-img">
  <%= post.images %>
</div>
<div class="post-content">
  <%= post.content %>
</div>